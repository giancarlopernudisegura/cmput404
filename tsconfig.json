{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "target": "es6",
    "jsx": "react",
    "jsxFactory": "h",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./public",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "files": [
    "src/index.d.ts"],
  "include": ["./src/**/*.tsx"],
  "exclude": ["dist", "build", "node_modules"]
}